<%include header %>

    <div class="horizontal-spacer" style="height:12vh;">
    </div>

    <div class="horizontal-spacer" style="height:5vh;">
    </div>
    <div class="container">
        <div class="row">
            <div class=" col-lg-8 col-lg-offset-2">

                <form class="form-horizontal">
                    <div class="form-group">
                        <label style="font-size:15px" class="control-label col-sm-4 loginLable" for="username">Username:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="username" placeholder="Enter Your Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px" class="control-label col-sm-4 loginLable" for="email">Email:</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="email" placeholder="Enter email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px" class="control-label col-sm-4 loginLable" for="pwd">Password:</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="pwd" placeholder="Enter password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px" class="control-label col-sm-4 loginLable" for="pwd">Confirm Password:</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="repwd" placeholder="Re-Enter password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-size:15px" class="control-label col-sm-4 loginLable" for="pwd">Profile Picture:</label>
                        <div class="col-sm-8">
                            <input type="file" id="profilePicture" placeholder="click to upload" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button style="font-size:15px" id="logbtsubmit" type="submit" class="btn btn-lg btn-primary pull-right">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="horizontal-spacer" style="height:5xvh;">
    </div>

    <%include footer %>
