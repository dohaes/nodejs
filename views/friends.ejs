<%include header %>
    <%include topNav %>

  <div class="boxed">

    <!--CONTENT CONTAINER-->
    <!--===================================================-->
    <div id="content-container">

      <!--Page Title-->
      <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
      <div id="page-title">
        <h1 class="page-header text-overflow"><%= title%></h1>
        <button class="btn btn-primary btn-labeled fa fa-plus-square" data-toggle="modal" data-target="#addFriend">Add Friend</button>
      </div>
      <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
      <!--End page title-->

      <!--Page content-->
      <!--===================================================-->
      <div id="page-content">
           <h3 class="text-thin"></h3>
           <div class="row">
               <div id="friends">
                 <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                   <div class="frnd">
                     <img src="img/av1.png" class="frndImg">
                     <p>Heba Bahaa Eldin Amer</p>
                     <button class="btn btn-danger btn-labeled fa fa-times" id="1" data-toggle="modal" data-target="#unfriend">Unfriend</button>
                   </div>
                 </div>
              </div>
           </div>
      </div>
      <!--===================================================-->
      <!--End page content-->


    </div>
    <!--===================================================-->
    <!--END CONTENT CONTAINER-->
    <!-- start add friend Modal -->
    <div id="addFriend" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add Friend</h4>
          </div>
          <div class="modal-body">
            <form action="" method="post">
               <div class="form-group">
                 <label for="name">Friend Name:</label>
                 <input type="text" class="form-control" id="name" required>
               </div>
               <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>
    <!-- end add friend Modal -->

    <!-- start remove friend Modal -->
    <div id="unfriend" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Remove Friend</h4>
          </div>
          <div class="modal-body">
            <h5>Are you want to remove <span class="text-info">heba</span> from your friends</h5>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-info" id="remove" data-dismiss="modal">Remove</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>
    <!-- end remove friend Modal -->

    <%include nav%>
  </div>



      <!-- FOOTER -->
      <!--===================================================-->
      <footer id="footer">
          <p class="pad-lft">&#0169; 2017 Otlob</p>
      </footer>
      <!--===================================================-->
      <!-- END FOOTER -->


      <!-- SCROLL TOP BUTTON -->
      <!--===================================================-->
      <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
      <!--===================================================-->

<%include footer%>
